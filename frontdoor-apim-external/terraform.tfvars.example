# Example terraform.tfvars file
# Copy this file to terraform.tfvars and customize the values

# Basic Configuration
environment     = "dev"
project_name    = "apimp"
location        = "East US"

# Networking
vnet_address_space                       = ["10.0.0.0/16"]
apim_subnet_address_prefix              = "10.0.1.0/24"
function_subnet_address_prefix          = "10.0.2.0/24"
private_endpoint_subnet_address_prefix  = "10.0.3.0/24"

# APIM Configuration
apim_sku_name      = "Developer_1"  # Options: Developer_1, Standard_1, Premium_1
publisher_name     = "API Administrator"
publisher_email    = "admin@yourdomain.com"

# Function App Configuration
function_app_sku = "P0v3"  # Premium V3 plan (Options: P0V3, P1V3, P2V3, P3V3)

# Optional: Custom resource group name (if not provided, will be auto-generated)
# resource_group_name = "rg-custom-name"
